    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Project_name</th>
                <td>{{ project.projectName }}</td>
            </tr>
            <tr>
                <th>Company_id</th>
                <td>{{ project.companyId }}</td>
            </tr>
            <tr>
                <th>Kitchen_type</th>
                <td>{{ project.kitchenType }}</td>
