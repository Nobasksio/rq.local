    </div >
    <div id="ttk" >
        <div> Категории</div>
            <b-button
                    v-for="(category, idx) in categories"
                    class="ml-1 mt-1"
                    size="sm"
                    :pressed.sync="category.id == product.selected_category"
                    active-class="primary"
                    variant="outline-secondary"
                    @click="changeCategory(category.id)"
            >
                $[ category.text ]
            </b-button>
        <b-spinner  v-show="visibleC" type="grow"></b-spinner>
        <div> Блюда</div>

            <b-button
                    v-for="(product_this, idx) in products"
                    class="ml-1 mt-1"
                    size="sm"
                    variant="outline-secondary"
                    :pressed.sync="product_this.id == product.id"
                    active-class="primary"
                    @click="changeProduct(product_this.id)"
            >
                $[ product_this.text ]
            </b-button>

        <b-button variant="primary" size="sm" class="ml-1 mt-1" @click="createNewProduct">Добавить блюдо</b-button>
        <b-spinner  v-show="visible" type="grow"></b-spinner>
        <ttk
                v-bind:class="{ notactive: isActive }"
                :categories="categories"
                :project_id="project_id"
                :subcategories="subcategories"
                :product="product"
                :measures="measures"
                :types_product="types_product"
                :all_components="all_components"
                :selected_component="selected_component"
                :selected_measure="selected_measure"
                :selected_category="product.selected_category"
                :selected_subcategory="product.selected_subcategory"
                :add-component="addComponent"
                :iiko_products="iiko_products"
                :iiko_product="product.iiko_ttk"
                :main-alert="mainAlert"
        >
        </ttk >
    </div >


